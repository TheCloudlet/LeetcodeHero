root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{cpp,h,hpp,cc}]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.py]
indent_size = 4

[*.org]
indent_size = 2

[*.{hs,lhs}]
indent_size = 2

[*.rkt]
indent_size = 2

[*.md]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.sh]
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 8
